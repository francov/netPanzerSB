<?xml version='1.0' encoding='utf-8'?>
<widget id="it.alcacoop.netpanzersb" version="1.1.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>netPanzerSB</name>
    <description>
        NetPanzer Server Browser
    </description>
    <author email="francesco.valente@alcacoop.it" href="http://alcacoop.it">
        Francesco Valente
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="res/icon/android/icon-32-ldpi.png" />
        <icon density="mdpi" src="res/icon/android/icon-48-mdpi.png" />
        <icon density="hdpi" src="res/icon/android/icon-72-hdpi.png" />
        <icon density="xhdpi" src="res/icon/android/icon-96-xhdpi.png" />
        <preference name="FadeSplashScreenDuration" value="1000" />
        <preference name="SplashScreenDelay" value="5000" />
        <preference name="SplashScreenBackgroundColor" value="black" />
        <preference name="ShowSplashScreenSpinner" value="false" />
        <preference name="SplashShowOnlyFirstTime" value="false" />
        <splash density="hdpi" src="res/screen/android/splash-hdpi.9.png" />
        <splash density="ldpi" src="res/screen/android/splash-ldpi.9.png" />
        <splash density="mdpi" src="res/screen/android/splash-mdpi.9.png" />
        <splash density="xhdpi" src="res/screen/android/splash-xhdpi.9.png" />
    </platform>
    <platform name="browser">
        <preference name="SplashScreen" value="/res/screen/android/splash-xhdpi.9.png" />
        <preference name="FadeSplashScreenDuration" value="1000" />
        <preference name="SplashScreenDelay" value="5000" />
        <preference name="SplashScreenBackgroundColor" value="black" />
        <preference name="ShowSplashScreen" value="true" />
        <preference name="SplashScreenWidth" value="600" />
        <preference name="SplashScreenHeight" value="300" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-device" spec="~1.1.2" />
    <plugin name="cordova-plugin-dialogs" spec="~1.2.1" />
    <plugin name="cordova-plugin-inappbrowser" spec="~1.4.0" />
    <plugin name="cordova-plugin-splashscreen" spec="~3.2.2" />
    <plugin name="cordova-plugin-statusbar" spec="~2.1.3" />
</widget>
